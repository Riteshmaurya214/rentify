<div class="hero d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h3 mb-1">Rentify — Rent smarter</h1>
    <p class="mb-0 text-muted">High-quality items in multiple categories. Rent for a day, a week or a month.</p>
  </div>
  <% if(user){ %>
    <a href="/products/add" class="btn btn-primary">List an Item</a>
  <% } else { %>
    <a href="/auth/login" class="btn btn-outline-primary">Login to List</a>
  <% } %>
</div>

<div class="row gy-4">
  <% products.forEach(p => { %>
    <div class="col-md-4">
      <div class="card h-100 shadow-sm">
        <% if(p.images && p.images[0]) { %>
          <img src="<%= p.images[0] %>" class="card-img-top" style="height:220px;object-fit:cover"/>
        <% } else { %>
          <div class="bg-light d-flex align-items-center justify-content-center" style="height:220px">No Image</div>
        <% } %>
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= p.title %></h5>
          <p class="card-text text-truncate"><%= p.description || 'No description' %></p>
          <div class="mt-auto d-flex justify-content-between align-items-center">
            <a href="/products/<%= p._id %>" class="btn btn-outline-primary btn-sm">View</a>
            <div><strong>₹<%= p.pricePerDay %></strong>/day</div>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
</div>
