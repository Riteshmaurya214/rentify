<h2>List an Item</h2>
<form action="/products/add" method="POST" enctype="multipart/form-data" class="mt-3">
  <div class="mb-3">
    <label class="form-label">Title</label>
    <input name="title" class="form-control" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Description</label>
    <textarea name="description" class="form-control"></textarea>
  </div>
  <div class="mb-3">
    <label class="form-label">Category</label>
    <input name="category" class="form-control">
  </div>
  <div class="mb-3">
    <label class="form-label">Location (City / Area)</label>
    <input name="location" class="form-control" placeholder="e.g. Varanasi, Cantonment">
  </div>
  <div class="row">
    <div class="col-md-4 mb-3">
      <label class="form-label">Min rent days</label>
      <input name="minRentDays" type="number" class="form-control" value="1" min="1">
    </div>
    <div class="col-md-4 mb-3">
      <label class="form-label">Max rent days</label>
      <input name="maxRentDays" type="number" class="form-control" value="30" min="1">
    </div>
    <div class="col-md-4 mb-3">
      <label class="form-label">Security deposit (₹)</label>
      <input name="securityDeposit" type="number" class="form-control" value="0" min="0">
    </div>
  </div>
  <div class="mb-3">
    <label class="form-label">Price per day (₹)</label>
    <input name="pricePerDay" type="number" class="form-control" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Video URL (YouTube / MP4 link) — optional (visible to guests)</label>
    <input name="videoUrl" type="url" class="form-control" placeholder="https://">
  </div>
  <div class="mb-3">
    <label class="form-label">Images (max 5)</label>
    <input name="images" type="file" class="form-control" multiple accept="image/*">
  </div>
  <button class="btn btn-primary">Add Product</button>
</form>
