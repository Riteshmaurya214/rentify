<div class="row">
  <div class="col-md-6">
    <% if(product.images && product.images.length){ %>
      <img src="<%= product.images[0] %>" class="img-fluid rounded mb-3">
      <div class="d-flex gap-2">
        <% product.images.forEach(img => { %>
          <img src="<%= img %>" style="height:60px;width:80px;object-fit:cover;border-radius:6px"/>
        <% }) %>
      </div>
    <% } else { %>
      <div class="bg-light" style="height:300px"></div>
    <% } %>

    <% if(product.videoUrl){ %>
      <div class="mt-3">
        <h6>Product Video</h6>
        <% if(product.videoUrl.includes('youtube')){ %>
          <% // embed youtube %>
          <div class="ratio ratio-16x9">
            <iframe src="<%= product.videoUrl.replace('watch?v=','embed/') %>" title="YouTube video" allowfullscreen></iframe>
          </div>
        <% } else { %>
          <video controls style="width:100%;max-height:360px">
            <source src="<%= product.videoUrl %>">
            Your browser does not support the video tag.
          </video>
        <% } %>
      </div>
    <% } %>

  </div>
  <div class="col-md-6">
    <h2><%= product.title %></h2>
    <p><%= product.description %></p>
    <p><strong>Category:</strong> <span class="badge badge-cat"><%= product.category %></span></p>
    <p><strong>Location:</strong> <%= product.location || '—' %></p>
    <p><strong>Security deposit:</strong> ₹<%= product.securityDeposit || 0 %></p>
    <p><strong>₹<%= product.pricePerDay %></strong> / day</p>
    <p><small>Allowed rent days: <%= product.minRentDays %> to <%= product.maxRentDays %> days</small></p>

    <% if(user){ %>
      <form action="/rentals/request/<%= product._id %>" method="POST" class="row g-2">
        <div class="col-6">
          <label class="form-label">Start</label>
          <input name="startDate" type="date" class="form-control" required>
        </div>
        <div class="col-6">
          <label class="form-label">End</label>
          <input name="endDate" type="date" class="form-control" required>
        </div>
        <div class="col-12">
          <label class="form-label">Message to owner (optional)</label>
          <textarea name="message" class="form-control" placeholder="Any special requests..."></textarea>
        </div>
        <div class="col-12">
          <button class="btn btn-success mt-2">Request Rent</button>
        </div>
      </form>
    <% } else { %>
      <p class="mt-3">Please <a href="/auth/login">login</a> to request rent or message the owner. Guests can view product details & video.</p>
    <% } %>
  </div>
</div>
